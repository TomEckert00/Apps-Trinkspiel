<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.PackageSelectionPage">

    <TextView
        android:id="@+id/textView_Header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/packageActivity_header"
        android:textSize="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/playerListOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Spieler: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_Header2" />

    <Button
        android:id="@+id/button_standardPacket"
        android:layout_width="367dp"
        android:layout_height="174dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:onClick="selectStandardPackage"
        android:text="@string/packageActivity_name_StandardPackage"
        app:layout_constraintBottom_toTopOf="@+id/button_onlinePacket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerListOutput" />

    <Button
        android:id="@+id/button_onlinePacket"
        android:layout_width="367dp"
        android:layout_height="174dp"
        android:layout_marginBottom="16dp"
        android:onClick="selectOnlinePackage"
        android:text="@string/packageActivity_name_OnlinePackage"
        app:layout_constraintBottom_toTopOf="@+id/button_back2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_back2"
        android:layout_width="119dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginBottom="32dp"
        android:onClick="redirectBack"
        android:text="@string/packageActivity_previousButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_startGameLoop"
        android:layout_width="125dp"
        android:layout_height="53dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="32dp"
        android:enabled="false"
        android:onClick="startGameWithSelectedPackage"
        android:text="@string/packageActivity_startButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>